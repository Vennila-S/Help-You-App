<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color"
    tools:context=".SignUpa">




        <LinearLayout
            android:id="@+id/us_reg_lin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <LinearLayout
        android:id="@+id/naln"
        android:layout_width="336dp"
        android:layout_height="578dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/usign" />
        <TextView
            android:id="@+id/us_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="5dp"

            android:fontFamily="sans-serif"
            android:text="Admin Sign Up Page"
            android:textColor="#0961E4"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/us_reg_namete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="45dp"
            android:fontFamily="sans-serif"
            android:text=" Admin Name"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/sign_username"
            android:layout_width="304dp"
            android:layout_height="50dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/gray"
            android:cursorVisible="true"
            android:ems="10"
            android:hint="Name"
            android:inputType="text"
            android:onClick="us_reg_fnon"
            android:padding="10dp"
            android:textColorHint="#6E6E6E"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/us_reg_agete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:fontFamily="sans-serif"
            android:text="Password"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/sign_password"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/gray"
            android:cursorVisible="true"
            android:ems="10"
            android:hint="Password"
            android:inputType="text"
            android:onClick="us_reg_ageon"
            android:padding="10dp"
            android:textColorHint="#6E6E6E"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/us_reg_mnte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="-48dp"
            android:fontFamily="sans-serif"
            android:text="Email"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/sign_email"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/gray"
            android:cursorVisible="true"

            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="phone"
            android:onClick="us_reg_mnon"
            android:paddingTop="5dp"
            android:textColorHint="#6E6E6E"
            android:textSize="16sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/sign_button"
            android:layout_width="206dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/adbutton"
            android:longClickable="true"
            android:onClick="us_signup_on"
            android:text="SIGN UP"
            android:textColor="#ffffff"
            android:textSize="16dp"

            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>
        </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>