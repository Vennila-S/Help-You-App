<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backlogin"
    tools:context=".LoginUser">


    <TextView
        android:id="@+id/signuptitle"
        android:layout_width="340dp"
        android:layout_height="86dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="46dp"
        android:gravity="center"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:soundEffectsEnabled="false"
        android:text="Admin-Vennila, Contact-9150450449, This app provides a platform for various services, including Transport, Electrical, Home cleaning and Plumber. This app leverages the power of digital technology to bridge the gap between rural residents and various services."
        android:textAllCaps="false"
        android:textColor="#800C0C0C"
        android:textIsSelectable="false"
        android:textSize="10sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/u_username"
        android:layout_width="308dp"
        android:layout_height="54dp"
        android:layout_below="@+id/signuptitle"
        android:layout_marginStart="60dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="18dp"
        android:backgroundTint="#B8827B"
        android:background="#95B8827B"
        android:drawableLeft="@drawable/baseline_supervised_user_circle_24"
        android:drawablePadding="10dp"
        android:hint="Username"
        android:padding="10dp"
        android:textColor="#900E0E0E" />

    <EditText
        android:id="@+id/u_password"
        android:layout_width="308dp"
        android:layout_height="54dp"
        android:layout_below="@id/u_username"
        android:layout_marginStart="60dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="18dp"
        android:backgroundTint="#B8827B"
        android:background="#95B8827B"

        android:drawableLeft="@drawable/baseline_password_24"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:padding="10dp"
        android:textColor="#900E0E0E"
        />

    <EditText
        android:id="@+id/u_email"
        android:layout_width="308dp"
        android:layout_height="54dp"
        android:layout_below="@id/u_password"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="18dp"

        android:background="#95B8827B"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:padding="10dp"
        android:textColor="#625F67" />

    <Button
        android:id="@+id/u_button"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="138dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="94dp"
        android:background="@drawable/button"
        android:clickable="true"
        android:contextClickable="true"

        android:text="login"
        android:textColor="#0C0C0C"
        android:textSize="15sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="151dp"
        android:layout_height="32dp"
        android:layout_alignStart="@+id/signuptitle"
        android:layout_alignTop="@+id/signuptitle"
        android:layout_alignEnd="@+id/signuptitle"
        android:layout_alignBottom="@+id/button"
        android:layout_marginStart="173dp"
        android:layout_marginTop="505dp"
        android:layout_marginEnd="-152dp"
        android:layout_marginBottom="93dp"
        android:text="Forgot Password?"
        android:textColor="#13A1A1"
        android:textSize="14sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="207dp"
        android:layout_height="27dp"
        android:layout_alignTop="@+id/signuptitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="521dp"
        android:layout_marginBottom="158dp"
        android:text="Don't have an account?"
        android:textColor="#070707"
        android:textSize="14sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/signup_redirecttext"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignTop="@+id/signuptitle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="544dp"
        android:layout_marginEnd="233dp"
        android:layout_marginBottom="108dp"
        android:linksClickable="true"
        android:text="Signup Now"
        android:textColor="#13A1A1"
        android:textIsSelectable="true"
        android:clickable="true"

        android:textColorLink="@color/black"
        android:textSize="14sp"
        android:textStyle="normal|bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="111dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="499dp"
        app:srcCompat="@drawable/users" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="580dp"
        android:text="USERS LOGIN"
        android:textColor="#8A063D"
        android:textSize="34sp"
        android:textStyle="italic" />


</RelativeLayout>

